// To return true if one of two numbers is positive and other one is negative
function positiveNegative(num1 , num2)
{
    if(num1 < 0 && num2 > 0)
        return true;
    if(num1 > 0 && num2 < 0)
        return true;
    return false;
}
console.log(positiveNegative(2,2));
console.log(positiveNegative(-2,2));
console.log(positiveNegative(2,-2));