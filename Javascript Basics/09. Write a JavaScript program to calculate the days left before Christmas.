const currentDate = new Date();
const christmasDate = new Date(currentDate.getFullYear(),11,25);

// calculating difference in miliseconds
const timeLeftInMiliseconds = christmasDate - currentDate;

// converting the difference in days
const daysLeft = Math.ceil(timeLeftInMiliseconds / (1000 * 60 * 60 * 24));

console.log(`There are ${daysLeft} Days left for Christmas.`);